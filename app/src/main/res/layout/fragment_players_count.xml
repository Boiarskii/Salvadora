<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/playersCountBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/howmanyplayers" />

    <ImageButton
        android:id="@+id/playersCountNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playersCountBG"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@null"
        android:src="@drawable/nextbutton" />

    <EditText
        android:id="@+id/etPlayersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playersCountNextButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:ems="2"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/white"
        android:textSize="40sp">

        <requestFocus />
    </EditText>

</RelativeLayout>